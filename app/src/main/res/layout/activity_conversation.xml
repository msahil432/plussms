<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     tools:context=".conversationActivity.ConversationActivity">
  <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/texts_list"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toTopOf="@id/msg_box"
       android:layout_marginBottom="12dp"
       android:layout_width="match_parent"
       android:layout_height="0dp"/>
  <com.stfalcon.chatkit.messages.MessagesList
       android:id="@+id/messagesList"
       android:visibility="gone"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toTopOf="@id/msg_box" />
  <androidx.cardview.widget.CardView
       android:id="@+id/msg_box"
       android:elevation="8dp"
       app:cardBackgroundColor="#36EBE9E9"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/send_fab"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_margin="6dp"
       android:layout_width="0dp"
       android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatEditText
         android:id="@+id/msg_text"
         android:maxLines="5"
         android:gravity="bottom"
         android:hint="@string/type_your_message_here"
         android:background="@drawable/rounded_bg"
         android:padding="8dp"
         android:minLines="2"
         android:textSize="16sp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
  </androidx.cardview.widget.CardView>
  <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:id="@+id/send_fab"
       android:layout_margin="8dp"
       android:rotation="-35"
       android:src="@drawable/ic_menu_send"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>