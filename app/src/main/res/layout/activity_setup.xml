<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:padding="8dp"
     tools:context=".setupActivity.SetupActivity">
  <com.transferwise.sequencelayout.SequenceLayout
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toTopOf="@+id/setup_progress"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_margin="16dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <com.transferwise.sequencelayout.SequenceStep
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/setup_starting"
         app:anchor="Now"
         app:active="true"
         app:title="Starting..."/>
    <com.transferwise.sequencelayout.SequenceStep
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/setup_collecting_sms"
         app:title="Collecting SMS"/>
    <com.transferwise.sequencelayout.SequenceStep
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/setup_collected_sms"
         app:title="SMS Gathered"/>
    <com.transferwise.sequencelayout.SequenceStep
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/setup_categorizing_sms"
         app:anchor="Soon"
         app:title="Categorizing SMS"
         app:subtitle="And Saving Results in Database."
         app:titleTextAppearance="@style/TextAppearance.AppCompat.Title"/>
    <com.transferwise.sequencelayout.SequenceStep
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/setup_done"
         app:anchor="Then"
         app:title="We Are Done!"/>
  </com.transferwise.sequencelayout.SequenceLayout>
  <com.github.florent37.androidslidr.Slidr
       app:layout_constraintBottom_toBottomOf="parent"
       android:id="@+id/setup_progress"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="16dp"
       app:slidr_regions_centerText="false"
       app:slidr_region_leftColor="#4CAF50"/>
</android.support.constraint.ConstraintLayout>