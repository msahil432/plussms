<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:app="http://schemas.android.com/apk/res-auto"
 android:layout_margin="8dp"
 android:layout_width="match_parent"
 android:layout_height="wrap_content">
  <androidx.cardview.widget.CardView
       app:layout_constraintTop_toTopOf="parent"
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       app:elevation="16dp"
       android:id="@+id/date_bubble"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
         android:id="@+id/text_date"
         android:layout_gravity="center"
         android:layout_margin="8dp"
         android:paddingTop="4dp"
         android:paddingBottom="2dp"
         android:paddingStart="8dp"
         android:paddingEnd="8dp"
         android:background="@drawable/rounded_bg"
         android:backgroundTint="@color/white_shaded"
         android:text="Moinday. 29 Feb"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
  </androidx.cardview.widget.CardView>
  <androidx.appcompat.widget.AppCompatImageView
       android:layout_marginBottom="2dp"
       android:paddingStart="0dp"
       android:paddingEnd="2dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="@id/messageTime"
       android:id="@+id/sender_image"
       android:src="@drawable/icon"
       android:layout_width="42dp"
       android:layout_height="40dp"/>
  <androidx.appcompat.widget.AppCompatTextView
       android:layout_marginEnd="60dp"
       app:layout_constraintTop_toBottomOf="@id/date_bubble"
       app:layout_constraintStart_toEndOf="@id/sender_image"
       app:layout_constraintEnd_toEndOf="parent"
       android:backgroundTint="@color/white_shaded"
       android:background="@drawable/bubble_from_left"
       android:padding="8dp"
       android:id="@+id/text_body"
       android:autoLink="all"
       android:text="invite_msg"
       android:layout_width="0dp"
       android:layout_height="wrap_content"/>
  <androidx.appcompat.widget.AppCompatTextView
       app:layout_constraintTop_toBottomOf="@id/text_body"
       app:layout_constraintEnd_toEndOf="@id/text_body"
       android:id="@+id/messageTime"
       android:layout_margin="2dp"
       android:textSize="11sp"
       android:text="04:00 PM"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="bottom|end"/>
  
</androidx.constraintlayout.widget.ConstraintLayout>